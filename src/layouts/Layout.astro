---
const prod = import.meta.env.ENV === 'prod';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500" rel="stylesheet">

		<style is:global>
			body {
				font-family: 'Poppins', sans-serif;
        font-weight: 300;
				background: #e9e9e9;
			}

			button[selected] {
				border: solid 2px blue;
			}

			generic-tabs {
				margin-top: 60px;
			}

			.home {
				color: black;
				text-decoration: none;
			}

			.home:hover,
			.home:active,
			.home:focus {
				color: blue;
				text-decoration: underline;
			}

			a {
				color: blue;
			}

      .astro-code {
        padding: 20px;
        border-radius: 8px;
      }
			
			.profile {
				align-items: center;
				display: flex;
			}

			.profile div {
				padding: 20px;
				padding-left: 40px;
			}

			.links {
				display: flex;
				list-style: none;
				padding: 0;
			}

			li {
				padding-right: 10px;
			}
      
			img {
				width: 175px;
				height: 175px;
				border-radius: 50%;
			}
			
			main {
				max-width: 700px;
				margin-left: auto;
				margin-right: auto;
			}

			article {
				padding: 20px;
				border-radius: 8px;
				background: white;
				box-shadow: #0000001f 0 0 4px, #0000003d 0 4px 4px;
				margin-bottom: 20px;
			}

			h3 { 
				font-size: 1.3em;
				margin: 0;
			}

			@media(max-width: 600px) {
				.profile {
					flex-direction: column;
				}

				.profile div {
					padding-left: 20px;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<a class="home" href="/"><h1>Passle</h1></a>
			<slot/>
		</main>
	</body>
  <script define:vars={{ prod }}>
    if(prod) {
      navigator.serviceWorker.register('/sw.js');
      let refreshing = false;
      navigator.serviceWorker.addEventListener('controllerchange', () => {
        if (refreshing) return;
        window.location.reload();
        refreshing = true;
      });
    }
  </script>
</html>